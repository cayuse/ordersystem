<table width="100%" border="0" cellpadding="0" cellspacing="0" style=cursor:pointer>
  <tr BGCOLOR='<%=student.intersession ? '#fadcc9' : 'white' %>';
              onmouseover="ChangeColor(this, 1);" 
              onmouseout="ChangeColor(this, <%=student.intersession ? '2' : '3' %>);" 
              onclick="<%=remote_function :url=>{:action=> 'edit', :id=>student.id}, :method=>:get%>">
    <td width="10%"><%=h student.number %></td>
    <td width="30%"><%=h student.name %></td>
    <td width="10%"><%=h student.homeroom %></td>
    <td width="5%"><%=h student.grade %></td>
  </tr>
</table>