<%= link_to 'Edit', {:controller => 'items', :id => item, :action => 'edit', :page => page} %>
  <div id="CollapsiblePanel<%= item.id %>" class="CollapsiblePanel" style="width: 50%;">
    <div class="cssTitle5"
              onmouseover="this.className='cssTitle2'"
              onmouseout="this.className='cssTitle5'"
              tabindex="<%= item.id %>"><%=h item.name %>
    </div>
    <div class="CollapsiblePanelContent">
      <table style="text-align: center; background-color: #777; height: 20px;" border="1" cellpadding="2" cellspacing="1">
        <tbody>
            <tr>
              <th width=10% ; class="cssTitle6">Units</th>
              <th width=10% ; class="cssTitle6">Issue</th>
              <th width=10% ; class="cssTitle6">Cost</th>
              <th width=10% ; class="cssTitle6">Price</th>
              <th width=10% ; class="cssTitle6">FMV</th>
              <th width=15% ; class="cssTitle6">Start Date</th>
              <th width=15% ; class="cssTitle6">Expire Date</th>
            </tr>
          <tr>
            <td class="cssWeeks1"><%=h item.units %></td>
            <td class="cssWeeks1"><%=h item.issue %></td>
            <td class="cssWeeks1"><%=h number_to_currency(item.current_price.cost) %></td>
            <td class="cssWeeks1"><%=h number_to_currency(item.current_price.price) %></td>
            <td class="cssWeeks1"><%=h number_to_currency(item.current_price.fmv) %></td>
            <td class="cssWeeks1"><%=h item.current_price.start %></td>
            <td class="cssNoDay1"><%=h item.current_price.expire %></td>
          </tr>
          <% if item.prices.count > 1 %>
            <tr>
              <td colspan="7" class="cssHeading1">Price History</td>
            </tr>
            <% for price in item.prices %>
              <% if price != item.current_price %>
                <tr>
                  <td class=cssToday1>&nbsp;</td>
                  <td class=cssToday1>&nbsp;</td>
                  <td class=cssNoDay1><%=h number_to_currency(price.cost) %></td>
                  <td class=cssNoDay1><%=h number_to_currency(price.price) %></td>
                  <td class=cssNoDay1><%=h number_to_currency(price.fmv) %></td>
                  <td class=cssNoDay1><%=h price.start %></td>
                  <td class=cssNoDay1><%=h price.expire %></td>
                </tr>
              <% end %>
            <% end %>
          <% end %>
          <tr>
            <% if item.itemtype %>
             <td colspan=7 class=cssToday1><%= item.itemtype.name %> </td>
            <% else %>
             <td colspan = 7 class=cssNoDay1> &nbsp; </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <script type="text/javascript">
